Movi <- 
  Movi %>%
  mutate(localidad = case_when(
    str_detect(localidad, "ANTONIO NARIÃ‘O") ~ "ANTONIO NARIÑO",
    TRUE ~ localidad
  )  )
  
  
  ######## Eliminar tildes
  library(stringi)
a <- c("Mesa", "Jabón", "piedra", "césar", "cigüeña")
