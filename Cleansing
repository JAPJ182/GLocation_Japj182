#### Split using one column

A <- data[1:40917,]
df <- strsplit( A$fecha_reg_solic, " ", useBytes = F) 
df  <- matrix(unlist(df), ncol=2, byrow=TRUE)
df   <- as.data.frame(df)
A$fecha_reg_solic <- df$V1



